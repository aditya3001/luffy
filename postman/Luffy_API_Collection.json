    {
      "name": "Exception Clusters",
      "item": [
        {
          "name": "List Clusters",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/{{api_version}}/clusters?limit=50",
              "host": ["{{base_url}}"],
              "path": ["api", "{{api_version}}", "clusters"],
              "query": [
                {
                  "key": "limit",
                  "value": "50",
                  "description": "Maximum number of clusters to return"
                }
              ]
            },
            "description": "Get a list of active exception clusters"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.clusters && response.clusters.length > 0) {",
                  "        pm.collectionVariables.set('cluster_id', response.clusters[0].cluster_id);",
                  "        console.log('Set cluster_id to:', response.clusters[0].cluster_id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get Cluster Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/{{api_version}}/clusters/{{cluster_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "{{api_version}}", "clusters", "{{cluster_id}}"]
            },
            "description": "Get detailed information about a specific cluster including stack trace and sample logs"
          },
          "response": []
        }
      ],
      "description": "Endpoints for managing and viewing exception clusters"
    },
    {
      "name": "Root Cause Analysis (RCA)",
