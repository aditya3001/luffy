# ===================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ===================================

# ===== Log Source Configuration =====
LOG_SOURCE=opensearch

# OpenSearch/Elasticsearch Configuration (Local)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=dev-logs-*
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Log Fetching Configuration
LOG_FETCH_INTERVAL=30m

# ===== Code Repository =====
GIT_REPO_PATH=/path/to/your/local/repo
GIT_BRANCH=develop
CODE_VERSION=v0.1.0-dev

# ===== LLM Configuration =====
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-your-dev-key-here
ANTHROPIC_API_KEY=
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=2000

# ===== Vector Database =====
VECTOR_DB_TYPE=qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ===== Relational Database =====
DATABASE_URL=postgresql://luffy_user:luffy_password@localhost:5432/observability
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ===== Time-Series Database =====
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=logs

# ===== Redis Cache =====
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=1800

# ===== Object Storage =====
STORAGE_BACKEND=local
S3_BUCKET=dev-log-observability
S3_REGION=us-east-1
GCS_BUCKET=dev-log-observability
LOCAL_STORAGE_PATH=./data/storage

# ===== API Configuration =====
API_PORT=8000
API_HOST=0.0.0.0
API_WORKERS=2
API_RELOAD=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ===== Dashboard Configuration =====
DASHBOARD_PORT=3000

# ===== Processing Configuration =====
BATCH_SIZE=500
MAX_WORKERS=2
CLUSTERING_THRESHOLD=0.85
MIN_CLUSTER_SIZE=2
PROCESSING_LOG_LEVELS=DEBUG,INFO,WARNING,ERROR,CRITICAL

# ===== Feature Flags =====
ENABLE_REAL_TIME_STREAMING=false
ENABLE_CODE_INDEXING=true
ENABLE_LLM_ANALYSIS=true
ENABLE_FEEDBACK_LOOP=true
ENABLE_GCHAT_NOTIFICATIONS=false

# ===== Google Chat Notifications =====
GCHAT_WEBHOOK_URL=
GCHAT_NOTIFICATION_THRESHOLD=1

# ===== Monitoring =====
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=DEBUG
