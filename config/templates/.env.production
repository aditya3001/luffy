# ===================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===================================
# IMPORTANT: Replace all placeholder values with actual production credentials
# DO NOT commit this file with real credentials to version control

# ===== Log Source Configuration =====
LOG_SOURCE=opensearch

# OpenSearch/Elasticsearch Configuration (Production)
ELASTICSEARCH_URL=https://prod-opensearch.example.com:9200
ELASTICSEARCH_INDEX=production-logs-*
ELASTICSEARCH_USERNAME=admin
ELASTICSEARCH_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# Log Fetching Configuration
LOG_FETCH_INTERVAL=1h

# ===== Code Repository =====
GIT_REPO_PATH=/app/data/repo
GIT_BRANCH=main
CODE_VERSION=v1.0.0

# ===== LLM Configuration =====
LLM_PROVIDER=openai
OPENAI_API_KEY=REPLACE_WITH_OPENAI_KEY
ANTHROPIC_API_KEY=
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=2000

# ===== Vector Database (Qdrant Cloud or Self-Hosted) =====
VECTOR_DB_TYPE=qdrant
QDRANT_HOST=prod-qdrant.example.com
QDRANT_PORT=6333
QDRANT_API_KEY=REPLACE_WITH_QDRANT_API_KEY
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ===== Relational Database (AWS RDS, Cloud SQL, etc.) =====
DATABASE_URL=postgresql://admin:REPLACE_PASSWORD@prod-db.example.com:5432/observability
DATABASE_POOL_SIZE=50
DATABASE_MAX_OVERFLOW=100

# ===== Time-Series Database =====
CLICKHOUSE_URL=http://clickhouse.example.com:8123
CLICKHOUSE_DATABASE=logs

# ===== Redis Cache (AWS ElastiCache, etc.) =====
REDIS_URL=redis://:REPLACE_PASSWORD@prod-redis.example.com:6379/0
REDIS_CACHE_TTL=7200

# ===== Object Storage =====
STORAGE_BACKEND=s3
S3_BUCKET=prod-log-observability
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET

# ===== API Configuration =====
API_PORT=8000
API_HOST=0.0.0.0
API_WORKERS=8
API_RELOAD=false
CORS_ORIGINS=https://dashboard.example.com,https://api.example.com

# ===== Dashboard Configuration =====
DASHBOARD_PORT=3000

# ===== Processing Configuration =====
BATCH_SIZE=2000
MAX_WORKERS=8
CLUSTERING_THRESHOLD=0.85
MIN_CLUSTER_SIZE=3
PROCESSING_LOG_LEVELS=ERROR,CRITICAL

# ===== Feature Flags =====
ENABLE_REAL_TIME_STREAMING=true
ENABLE_CODE_INDEXING=true
ENABLE_LLM_ANALYSIS=true
ENABLE_FEEDBACK_LOOP=true
ENABLE_GCHAT_NOTIFICATIONS=true

# ===== Google Chat Notifications =====
GCHAT_WEBHOOK_URL=https://chat.googleapis.com/v1/spaces/SPACE_ID/messages?key=KEY&token=TOKEN
GCHAT_NOTIFICATION_THRESHOLD=5

# ===== Monitoring =====
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=WARNING

# ===== Security =====
# Add additional security configurations as needed
SECURE_COOKIES=true
SESSION_TIMEOUT=3600
